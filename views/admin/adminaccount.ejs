<%- include('./includes/header') %>


  
  <div class="container-scroller">

              <!-- navbar -->
      <%- include('./includes/navbar') %>

    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
    
              <!-- sidebar -->
      <%- include('./includes/sidebar') %>

      <!-- content -->
      <div class="main-panel">
        <div class="content-wrapper">
          <h2 class="text-center" >Admin Record</h2>
            <% if (admin.length > 0) { %>
              <table class="table responsive">
                  <thead class="thead-dark col-2">
                    <tr>
                      <th>ID</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Email</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
              
                  <tbody> 
                  <% for (let admins of admin) { %>
                    <tr>
                      <td><%= admins.id %></td>
                      <td><%= admins.fname %></td>
                      <td><%= admins.lname %></td>
                      <td><%= admins.email %></td>
                      <td>
                        <a href="#">Edit</a>
                        <!-- <a href="#">Delete</a> -->
                        <form action="/admin/delete" method="POST">
                                      <!-- studentid -->
                          <input type="hidden" value="<%= admins.id %>" name="adminId">
                          <button type="submit" class="btn btn-success float-right mt-2">Delete</button>
                        </form>
                      </td>
  
                    </tr>
                  <% } %>
                  </tbody>
                </table>
              <% } else { %>
                  <div class="container">
                      <h1 style="color: red" >No Admin Found!</h1>
                  </div>
              <% } %>
        </div>
      </div>
    </div>
  </div>

  <%- include('./includes/footer') %>
